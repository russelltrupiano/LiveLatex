/*
 * Import nib
 */
@import 'nib'
@import 'rupture'
@import 'jeet'
@import 'axis'

/*
 * Nib provides a CSS reset
 */
global-reset()

fonts = helvetica, arial, sans-serif

/*
 * Store the main color and
 * background color as variables
 */
main-color = #003399
offwhite = #eeeeee
darkgrey = #333333
lightgrey = #aaaaaa

// screen sizes
extralarge = 1400px
large = 1200px
mediumlarge = 1050px
medium = 850px
small = 650px
extrasmall = 500px

//Font sizes

content-large-title = 4em
content-title = 3em
content-large = 1.5em
content-medlarge = 1.35em
content-profile = 1.1em
content-normal = 1em
content-small = .85em
content-extrasmall = .6em

bg-size ()
    -webkit-background-size: arguments;
    -moz-background-size: arguments;
    -o-background-size: arguments;

.hidden
    display none
    height 0px
    width 0px
    height 0px
    overflow hidden

html, body
    height 100%
    font-family fonts

    section.header-section
        background main-color
        height 3em
        width 100%

        div.header-content
            color offwhite
            font-size content-large
            align(horizontal)
            width 100%
            text-align left

            h1
                margin-top .5em
                padding 0 16px

    section.menu-section
        height 2em
        border-bottom 2px solid #cccccc

        div.menu-content
            color darkgrey
            font-size content-profile
            align(horizontal)
            width 100%
            text-align left
            margin-top .5em
            column(1, gutter: 0)

            div.left-menu,
            div.right-menu
                column(2/10, gutter: 0)

            div.left-menu
                text-align left

                span
                    img
                        max-height 1.1em

            div.right-menu
                text-align right

            div.document-title
                column(6/10, gutter: 0)

                h3
                    text-align center

    section.document-section
        padding 0
        cf()

        div.left-document
            column(1/2, gutter: 1)
            height 846px
            background #330099

            div#editor
                height 100%
                width 100%
                cf()

        div.right-document
            column(1/2, gutter: 1)
            max-height 846px
            overflow scroll

            canvas
                max-width 100%
                max-height 846px

    section.footer-section
        footer
            background lightgrey
            height 1.5em
            width 100%
            opacity 0.9
            position fixed
            left 0
            bottom 0
            z-index 1000




