/*
 * Import nib
 */
@import 'nib'
@import 'rupture'
@import 'jeet'
@import 'axis'

/*
 * Nib provides a CSS reset
 */
global-reset()

fonts = helvetica, arial, sans-serif

/*
 * Store the main color and
 * background color as variables
 */
main-color = #003399
offwhite = #eeeeee
darkgrey = #333333

// screen sizes
extralarge = 1400px
large = 1200px
mediumlarge = 1050px
medium = 850px
small = 650px
extrasmall = 500px

//Font sizes

content-large-title = 4em
content-title = 3em
content-large = 1.5em
content-medlarge = 1.35em
content-profile = 1.1em
content-normal = 1em
content-small = .85em
content-extrasmall = .6em

bg-size ()
    -webkit-background-size: arguments;
    -moz-background-size: arguments;
    -o-background-size: arguments;

.hidden
    display none
    height 0px
    width 0px
    height 0px
    overflow hidden

html
    height 100%
    font-family fonts

    section.header-section
        background main-color
        height 3em
        width 100%
        // box-shadow: 1px 1px 15px #888888;

        div.header-content
            color offwhite
            font-size content-large
            align(horizontal)
            width 100%
            text-align left

            h1
                margin-top .5em
                padding 0 16px

    section.menu-section
        height 2em
        border-bottom 2px solid #cccccc

        div.menu-content
            color darkgrey
            font-size content-profile
            align(horizontal)
            width 100%
            text-align left
            margin-top .5em


            span
                padding 0 16px

    section.document-section
        padding 16px

        div.left-document
            column(1/2, gutter: 1)
            height 835px
            background #330099

            div#editor
                height 100%
                width 100%
                cf()

        div.right-document
            column(1/2, gutter: 1)
            height 835px
            background #990033



